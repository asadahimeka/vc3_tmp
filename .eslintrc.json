{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard", 
    "plugin:vue/recommended", 
    "eslint:recommended"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "vue/max-attributes-per-line": "off",
    "vue/require-default-prop": "off",
    "vue/html-self-closing": "off",
    "indent": ["error", 2],
    "quotes": ["warn", "single"],
    "semi": ["error", "never"],
    "no-console": "off",
    "space-before-function-paren": "off",
    "no-unused-expressions": "off",
    "no-multiple-empty-lines": ["error", {"max": 2}],
    "eqeqeq": "off",
    "no-unused-vars": "warn"
  }
}
